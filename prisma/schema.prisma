generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  phone String

  sentMessages     Chat[]    @relation("SentMessages") // Relacionamento separado para quando User é o cliente
  recievedMessages Chat[]    @relation("RecievedMessages") // Relacionamento separado para quando User é o atendente
  Message          Message[]

  @@map("users")
}

model Chat {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  senderId String? @db.ObjectId
  sender   User?   @relation("SentMessages", fields: [senderId], references: [id]) // Relacionamento com User como cliente

  recieverId String? @db.ObjectId
  reciever   User?   @relation("RecievedMessages", fields: [recieverId], references: [id]) // Relacionamento com User como atendente

  messages Message[]

  @@map("chats")
}

model Message {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  text String

  Chat   Chat?   @relation(fields: [chatId], references: [id])
  chatId String? @db.ObjectId

  @@map("messages")
}
